<div id="chat-tray-container">
  <div id="chat-tray">
    <div id="chat-tray-text-container">
      <h3>Global Chat</h3>
      <hr>
    </div>
    <div id="chat-tray-message-container">
    </div>
    <div id="chat-tray-separator">
      <hr>
    </div>
    <div id="chat-tray-input-container">
      <br>
      <input autocomplete="off" id="chat-tray-input" type="text" maxlength="256">&nbsp;<button id="chat-tray-input-send-button">Send</button>
    </div>
    <div id="chat-tray-error-container">
      <p id="chat-tray-error"></p>
    </div>
  </div>
</div>