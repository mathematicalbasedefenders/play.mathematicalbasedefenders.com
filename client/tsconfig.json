{
  "include": ["src/**/*"],
  "exclude": ["**/*/lib/*.js", "**/ignored/**", "public/**/*", "dist"],
  "compilerOptions": {     
    "module": "CommonJS",
    "target": "es6",                                                                                              
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,       
    "outDir": "dist",                                
    "skipLibCheck": true, 
    "lib": ["es2021", "dom"],   
    "moduleResolution": "node",    
  }
}
