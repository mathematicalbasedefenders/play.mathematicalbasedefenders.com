<div id="on-screen-keyboard-container">
  <div id="on-screen-keyboard-wrapper">
    <div id="on-screen-keyboard">
      <div id="on-screen-keyboard__row-1">
        <button class="on-screen-keyboard-button on-screen-keyboard-button--regular">1</button>
        <button class="on-screen-keyboard-button on-screen-keyboard-button--regular">2</button>
        <button class="on-screen-keyboard-button on-screen-keyboard-button--regular">3</button>
        <button class="on-screen-keyboard-button on-screen-keyboard-button--regular">4</button>
        <button class="on-screen-keyboard-button on-screen-keyboard-button--regular">5</button>
        <button class="on-screen-keyboard-button on-screen-keyboard-button--regular">6</button>
        <button class="on-screen-keyboard-button on-screen-keyboard-button--regular">7</button>
        <button class="on-screen-keyboard-button on-screen-keyboard-button--regular">8</button>
        <button class="on-screen-keyboard-button on-screen-keyboard-button--regular">9</button>
        <button class="on-screen-keyboard-button on-screen-keyboard-button--regular">0</button>
      </div>
      <div id="on-screen-keyboard__row-2">
        <button class="on-screen-keyboard-button on-screen-keyboard-button--large">Send</button>
        <button id="on-screen-keyboard-button--increase-size"
          class="on-screen-keyboard-button on-screen-keyboard-button--small">+H</button>
        <button id="on-screen-keyboard-button--decrease-size"
          class="on-screen-keyboard-button on-screen-keyboard-button--small">-H</button>
        <button class="on-screen-keyboard-button on-screen-keyboard-button--large">Back</button>
      </div>
    </div>
  </div>
</div>