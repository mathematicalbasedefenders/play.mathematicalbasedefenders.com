{
  "include": ["src/**/*"],
  "exclude": ["**/*/lib/*.js", "**/ignored/**"],
  "compilerOptions": {     
    "module": "es6",
    "target": "es5",                                                         
    "rootDir": "src",                                      
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,       
    "outDir": "dist",                                
    "skipLibCheck": true, 
    "lib": ["es2021", "dom"],   
    "allowJs": true,
    "allowSyntheticDefaultImports": true, 
    "moduleResolution": "node",                         
  }
}
